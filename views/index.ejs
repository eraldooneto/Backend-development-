<%-include('partials/header.ejs') %>

<body>
    
    <%-include('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1>Questions</h1>
        <hr>
        <a href="/ask" class="btn btn-primary">Ask a Question</a>
        <hr>
        <% asks.forEach((ask) => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= ask.title %></h3>
                </div>
                <div class="card-footer">
                    <a href="/ask/<%= ask.id %>"> <button class="btn btn-primary">Answer</button></a>
                </div>

            </div>
            <!-- <p><%= ask.description %></p> -->
       <% }); %>

    </div>


</body>
<%-include('partials/footer.ejs') %>
